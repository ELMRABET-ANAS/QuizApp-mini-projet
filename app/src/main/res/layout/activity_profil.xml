<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profil_activity"
    android:orientation="vertical"
    android:padding="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Profil"
        android:layout_marginLeft="40dp"
        android:textSize="50dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"/>
    <LinearLayout
        android:layout_marginTop="100dp"
        android:id="@+id/linLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Full name :"
            android:textSize="@dimen/places_autocomplete_search_input_text"
            android:textColor="@color/colorAccent"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/places_autocomplete_prediction_height"
            android:id="@+id/usrName"
            android:textSize="@dimen/places_autocomplete_search_input_text"
            android:textColor="@color/colorPrimaryDark"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Birthday :"
            android:textSize="@dimen/places_autocomplete_search_input_text"
            android:textColor="@color/colorAccent"/>


        <TextView
            android:layout_width="139dp"
            android:layout_height="@dimen/places_autocomplete_prediction_height"
            android:id="@+id/birth"
            android:textSize="@dimen/places_autocomplete_search_input_text"
            android:textColor="@color/colorPrimaryDark"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/linLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="E-mail :"
            android:textSize="@dimen/places_autocomplete_search_input_text"
            android:textColor="@color/colorAccent"/>


        <TextView
            android:layout_width="250dp"
            android:layout_height="@dimen/places_autocomplete_prediction_height"
            android:id="@+id/email"
            android:textSize="@dimen/places_autocomplete_search_input_text"
            android:textColor="@color/colorPrimaryDark"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/linLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Phone number :"
            android:textSize="@dimen/places_autocomplete_search_input_text"
            android:textColor="@color/colorAccent"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:textSize="@dimen/places_autocomplete_search_input_text"
            android:textColor="@color/colorPrimaryDark"/>


    </LinearLayout>

</LinearLayout>